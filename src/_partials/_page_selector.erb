<section>
  <% if paginator.total_pages > 1 %>
    <ul class="pagination-ul">
      <% if paginator.previous_page %>
        <li><a href="<%= paginator.previous_page_path %>"><span>
          Newer ğŸ‘ˆ
        </a></span></li>
      <% else %>
        <li class="lowlighted"><span>
          Newer ğŸ‘ˆ
        </span></li>
      <% end %>
      <% (1..paginator.total_pages).each do |page_number| %>
        <% if page_number == 1 && ["/posts/", "/posts/index.html"].include?(resource.relative_url) %>
          <li class="lowlighted depressed"><span>
            1
          </span></li>
        <% elsif resource.relative_url.start_with?("/posts/page/#{page_number}/") %>
          <li class="lowlighted depressed"><span>
            <%= page_number %>
          </span></li>
        <% else %>
          <% if page_number == 1 %>
            <li><a href="/<%= resource.data.pagination.collection %>/"><span>
              1
            </a></span></li>
          <% else %>
            <li><a href="/<%= resource.data.pagination.collection %>/page/<%= page_number %>/"><span>
              <%= page_number %>
            </a></span></li>
          <% end %>
        <% end %>
      <% end %>
      <% if paginator.next_page %>
        <li><a href="<%= paginator.next_page_path %>"><span>
          ğŸ‘‰ Older
        </a></span></li>
      <% else %>
        <li class="lowlighted"><span>
          ğŸ‘‰ Older
        </span></li>
      <% end %>
    </ul>
  <% end %>
</section>
